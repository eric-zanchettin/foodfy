<div class="fields">
    <div>
        <h1>Bem vindo {{ user.firstName }},</h1>

        <p>Nome</p>
        <input type="text" name="name" value="{{ user.name }}" placeholder="Digite o seu Nome ... " />

        <div>
            <p>Email</p>
            <input type="email" name="email" value="{{ user.email }}" placeholder="Digite seu E-mail ... " onblur="validateEmail.validate(value)" />
        </div>

        <p>Senha</p>
        <input type="password" name="password" placeholder="Digite a Senha ..." />
    </div>
</div>