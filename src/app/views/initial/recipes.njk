{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy - Receitas</title>
{% endblock %}

{% block content %}

    <div id="top">
        <section id="grid-top">
            {% for item in items %}
            <div class="cards" id="{{item.id}}">
                <a>
                    <img src="{{item.image}}" alt="{{item.alt}}" />
                    <h1>{{item.title}}</h1>
                    <p>por {{item.author}}</p>
                </a>
            </div>
            {% endfor %}
        </section>
    </div>
    <script src="scripts.js"></script>
{% endblock %}